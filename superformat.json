{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "superformat/v2/2025-02-03",
  "title": "Superformat",
  "type": "object",
  "definitions": {
    "document-kind": {
      "type": "string",
      "enum": [
        "invoice",
        "purchase-order",
        "delivery-receipt",
        "match-report"
      ]
    },
    "normal-string": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "pattern": "^\\S.*\\S$|^\\S+$",
      "examples": [
        "Ärkehålans Aktie-Bolag"
      ]
    },
    "restricted-string": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "pattern": "^[a-z0-9](?:-?[a-z0-9]+)*$",
      "examples": [
        "x",
        "xy",
        "foo",
        "foo-bar",
        "o-k",
        "0actuallyok",
        "cc80eb8a-35e0-11ed-90a9-38d547aac12a",
        "12345678901234567890123456789012345678901234567890"
      ]
    },
    "name-value": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "value"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/normal-string"
        },
        "value": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "meta": {
          "type": "object"
        },
        "encoding": {
            "type": "string",
            "deprecated": true,
            "enum": ["base64"]
        }
      }
    },
    "name-value-array": {
      "type": "array",
      "maxItems": 100,
      "uniqueItems": true,
      "items": {
        "$ref": "#/definitions/name-value"
      }
    },
    "name-number-value": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "value"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/restricted-string"
        },
        "value": {
          "type": "number"
        }
      }
    },
    "name-value-object": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "fields"
      ],
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/name-value"
          }
        }
      }
    },
    "name-severity-level-value": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "value"
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/restricted-string"
        },
        "value": {
          "type": "string",
          "enum": [
            "no_severity",
            "info",
            "low",
            "medium",
            "high"
          ]
        }
      }
    }
  },
  "required": [
    "site",
    "id",
    "stage"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "#/definitions/restricted-string",
      "examples": [
        "49552f44-310b-11ec-91ac-38d547aac12a",
        "8aa8ba9164fe955201657807e11b5f3d"
      ]
    },
    "version": {
      "type": "string",
      "enum": ["v2", "v3"],
      "examples": ["v2", "v3"]
    },
    "kind": {
      "$ref": "#/definitions/document-kind"
    },
    "site": {
      "$ref": "#/definitions/restricted-string"
    },
    "stage": {
      "$ref": "#/definitions/restricted-string"
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "kind"
        ],
        "properties": {
          "id": {
            "$ref": "#/definitions/restricted-string"
          },
          "kind": {
            "$ref": "#/definitions/document-kind"
          }
        }
      }
    },
    "headers": {
      "$ref": "#/definitions/name-value-array"
    },
    "items": {
      "type": "array",
      "maxItems": 1000,
      "items": {
        "$ref": "#/definitions/name-value-object"
      }
    },
    "rows": {
      "type": "array",
      "maxItems": 1000,
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/name-value-object"
          },
          {
            "$ref": "#/definitions/name-value-array",
            "deprecated": true
          }
        ]
      }
    },
    "flow": {
      "type": "array",
      "maxItems": 1000,
      "items": {
        "$ref": "#/definitions/name-value-object"
      }
    },
    "deviations": {
      "type": "array",
      "maxItems": 1000,
      "items": {
        "type": "object"
      }
    },
    "itempairs": {
      "type": "array",
      "maxItems": 1000,
      "items": {
        "type": "object"
      }
    },
    "attachments": {
      "$ref": "#/definitions/name-value-array"
    },
    "text": {
      "type": "string",
      "$comment": "base64 encoded text"
    },
    "labels": {
      "type": "array",
      "maxItems": 1000,
      "items": {
        "$ref": "#/definitions/restricted-string"
      }
    },
    "metrics": {
      "type": "array",
      "maxItems": 1000,
      "items": {
        "oneOf": [
            {
                "$ref": "#/definitions/name-number-value"
            },
            {
                "$ref": "#/definitions/name-severity-level-value"
            }
        ]
      }
    },
    "images": {
      "$ref": "#/definitions/name-value-array",
      "$comment": "Always base64 encoded value"
    }
  }
}
